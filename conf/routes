# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Collection
GET         /                         controllers.Collection.index
GET         /cards/:name              controllers.Collection.universe(name)
GET         /card/*id                 controllers.Collection.card(id)
POST        /collection/update        controllers.Collection.update

# Decks
GET         /decks                    controllers.Decks.list
POST        /decks/delete             controllers.Decks.delete
POST        /decks/create             controllers.Decks.create
POST        /decks/rename             controllers.Decks.rename
GET         /decks/view/:id           controllers.Decks.view(id: Int)
GET         /decks/select/:id         controllers.Decks.select(id: Int)
GET         /decks/unselect           controllers.Decks.unselect

# Auth
GET         /login                    controllers.Auth.login
POST        /login                    controllers.Auth.loginPost
GET         /register                 controllers.Auth.register
POST        /register                 controllers.Auth.registerPost
GET         /logout                   controllers.Auth.logout

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.at(path="/public", file)
GET         /*path                    controllers.Error.fourOhFour(path)
