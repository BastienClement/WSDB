# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Pages
GET         /                    controllers.CollectionController.index
GET         /cards/:name         controllers.CollectionController.universe(name)

# Decks
GET         /decks               controllers.DecksController.list
POST        /decks/delete        controllers.DecksController.delete
POST        /decks/create        controllers.DecksController.create

# Auth
GET         /login               controllers.AuthController.login
POST        /login               controllers.AuthController.loginPost
GET         /register            controllers.AuthController.register
POST        /register            controllers.AuthController.registerPost
GET         /logout              controllers.AuthController.logout

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

